<div class="dropdown dropdown--{{position}}">
  <ul>
  {{#each list}}
    <li>
      <button 
        type="button"
        id={{id}}
        {{#if popover}}
        popovertarget="{{popover}}" 
        popovertargetaction="show"
        {{/if}}
        {{#if style}}class="{{style}}"{{/if}}
        >
        <span class="icon icon-{{icon}}"></span>
        {{ title }}
      </button>
    </li>
  {{/each}}
  </ul>
</div>
